<connector>
  <connectorId>Mule</connectorId>
  <version>5.0</version>
  <icon>mule.png</icon>
  <categories>
    <category>
      <name>Mule</name>
      <icon>com/ricston/bonitasoft/connectors/mule/mule.png</icon>
    </category>
  </categories>
  <inputs>
    <setter>
      <setterName>setEndpointAddress</setterName>
      <required></required>
      <parameters>
        <string></string>
      </parameters>
    </setter>
    <setter>
      <setterName>setSynchronous</setterName>
      <required></required>
      <parameters>
        <boolean>false</boolean>
      </parameters>
    </setter>
    <setter>
      <setterName>setRequestPayload</setterName>
      <parameters>
        <string></string>
      </parameters>
    </setter>
    <setter>
      <setterName>setMessageProperties</setterName>
      <parameters>
        <list/>
      </parameters>
    </setter>
    <setter>
    	<setterName>setAddProcessInstanceIdVariable</setterName>
    	<parameters>
    		<boolean>false</boolean>
    	</parameters>
    </setter>
    <setter>
    	<setterName>setAddActivityInstanceIdVariable</setterName>
    	<parameters>
    		<boolean>false</boolean>
    	</parameters>
    </setter>
    <setter>
    	<setterName>setAsynchResponseVariableName</setterName>
    	<parameters>
    		<string>incoming</string>
    	</parameters>
    </setter>      
  </inputs>
  <outputs>
    <getter>
      <name>result</name>
    </getter>
    <getter>
      <name>resultAsString</name>
    </getter>
    <getter>
      <name>resultMessageProperties</name>
    </getter> 
    <getter>
      <name>muleMessage</name>
    </getter>   
  </outputs>
  <pages>
    <page>
      <pageId>endpointConfiguration</pageId>
      <widgets>
        <text>
          <size>20</size>
          <maxChar>40</maxChar>
          <setter reference="/connector/inputs/setter"/>
          <labelId>endpointAddress</labelId>
        </text>
        <checkbox>
          <name>synchronous</name>
          <value>true</value>
          <setter reference="/connector/inputs/setter[2]"/>
          <labelId>synchronous</labelId>
        </checkbox>
        <text>
          <size>20</size>
          <maxChar>40</maxChar>
          <setter reference="/connector/inputs/setter[3]"/>
          <labelId>requestPayload</labelId>
        </text>
        <array>
          <cols>2</cols>
          <rows>0</rows>
          <fixedCols>true</fixedCols>
          <fixedRows>false</fixedRows>
          <colsCaptions>
            <string>key</string>
            <string>value</string>
          </colsCaptions>
          <setter reference="/connector/inputs/setter[4]"/>
          <labelId>messageProperties</labelId>
        </array>
        <checkbox>
          <name>setAddProcessInstanceIdVariable</name>
          <value>false</value>
          <setter reference="/connector/inputs/setter[5]"/>
          <labelId>setAddProcessInstanceIdVariable</labelId>
        </checkbox>
        <checkbox>
          <name>setAddActivityInstanceIdVariable</name>
          <value>false</value>
          <setter reference="/connector/inputs/setter[6]"/>
          <labelId>setAddActivityInstanceIdVariable</labelId>
        </checkbox>
        <text>
          <size>20</size>
          <maxChar>40</maxChar>
          <setter reference="/connector/inputs/setter[7]"/>
          <labelId>setAsynchResponseVariableName</labelId>
        </text>                
      </widgets>
    </page>
  </pages>
